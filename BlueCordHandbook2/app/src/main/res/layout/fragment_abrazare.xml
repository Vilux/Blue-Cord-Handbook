<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_abrazare"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            app:srcCompat="@drawable/abrazare" />

        <TextView
            android:id="@+id/abrazare_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:gravity="left"
            android:text="Abrazare"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            app:fontFamily="@font/almendra_sc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_abrazare" />

        <TextView
            android:id="@+id/abrazare_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="TextView"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/abrazare_title" />

        <TextView
            android:id="@+id/requirements_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:gravity="left"
            android:text="Requirements"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            app:fontFamily="@font/almendra_sc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/abrazare_text" />

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/indicator"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="7dp"
                android:src="@drawable/arrow_down"
                />

            <TextView
                android:id="@+id/expandableListView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:clickable="true"
                android:textStyle="bold"
                android:layout_weight="0.7"
                android:text="Proficiency with Wrestling Foundation."/>

            <TextView
                android:id="@+id/wrest_comp"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_marginRight="25dp"
                android:text="Complete"
                android:textStyle="bold|italic"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/abrazare_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="27dp"
                android:text="Demonstrate three holds on each arm key."/>

            <Spinner
                android:id="@+id/abrazare_checkbox"
                android:background="@drawable/square_text"
                android:layout_width="0dp"
                android:layout_weight="0.12"
                android:layout_marginRight="25dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/abrazare_item2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="27dp"
                android:text="Demonstrate three holds to each the head, upper body, and legs."/>

            <Spinner
                android:id="@+id/abrazare_checkbox2"
                android:background="@drawable/square_text"
                android:layout_width="0dp"
                android:layout_weight="0.12"
                android:layout_marginRight="25dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/abrazare_item3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="27dp"
                android:text="Demonstrate the three 'go-behinds'."/>

            <Spinner
                android:id="@+id/abrazare_checkbox3"
                android:background="@drawable/square_text"
                android:layout_width="0dp"
                android:layout_weight="0.12"
                android:layout_marginRight="25dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/abrazare_item4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="27dp"
                android:text="Demonstrate the three wrist-locks."/>

            <Spinner
                android:id="@+id/abrazare_checkbox4"
                android:background="@drawable/square_text"
                android:layout_width="0dp"
                android:layout_weight="0.12"
                android:layout_marginRight="25dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/abrazare_item5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="27dp"
                android:text="Demonstrate proper posture and structure in coll and elbow."/>

            <Spinner
                android:id="@+id/abrazare_checkbox5"
                android:background="@drawable/square_text"
                android:layout_width="0dp"
                android:layout_weight="0.12"
                android:layout_marginRight="25dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/abrazare_complete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="30dp"
                android:text="Student has completed all assessments."/>

            <Spinner
                android:id="@+id/abrazare_complete_check"
                android:background="@drawable/square_text"
                android:layout_width="0dp"
                android:layout_weight="0.12"
                android:layout_marginRight="25dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/indicator2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="7dp"
                android:src="@drawable/arrow_down"
                />

            <TextView
                android:id="@+id/expandableListView2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:clickable="true"
                android:textStyle="bold"
                android:layout_weight="0.7"
                android:text="Proficiency with Striking Foundation."/>

            <TextView
                android:id="@+id/strike_comp"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_marginRight="25dp"
                android:text="Complete"
                android:textStyle="bold|italic"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/strike_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="27dp"
                android:text="Show the five places of pain."/>

            <Spinner
                android:id="@+id/strike_checkbox"
                android:background="@drawable/square_text"
                android:layout_width="0dp"
                android:layout_weight="0.12"
                android:layout_marginRight="25dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/strike_item2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="27dp"
                android:text="Demonstrate the five striking weapons of the body."/>

            <Spinner
                android:id="@+id/strike_checkbox2"
                android:background="@drawable/square_text"
                android:layout_width="0dp"
                android:layout_weight="0.12"
                android:layout_marginRight="25dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/strike_item3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="27dp"
                android:text="Conduct powerful and accurate blows with each of the five strikes."/>

            <Spinner
                android:id="@+id/strike_checkbox3"
                android:background="@drawable/square_text"
                android:layout_width="0dp"
                android:layout_weight="0.12"
                android:layout_marginRight="25dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/strike_item4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="27dp"
                android:text="Demonstrate use of the four postures to defeat the five strikes."/>

            <Spinner
                android:id="@+id/strike_checkbox4"
                android:background="@drawable/square_text"
                android:layout_width="0dp"
                android:layout_weight="0.12"
                android:layout_marginRight="25dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/strike_complete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="30dp"
                android:text="Student has completed all assessments."/>

            <Spinner
                android:id="@+id/strike_complete_check"
                android:background="@drawable/square_text"
                android:layout_width="0dp"
                android:layout_weight="0.12"
                android:layout_marginRight="25dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>